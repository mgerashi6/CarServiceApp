<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_color"
    tools:context=".customerAppointmentsBooked">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="280dp"
        android:layout_height="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="400dp"
        android:layout_height="54dp"
        android:layout_marginTop="190dp"
        android:text="Appointments Booked"
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <TextView
        android:id="@+id/appointment_box"
        android:layout_width="373dp"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_corner"
        android:text=""
        android:textColor="@color/black"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title" />

    <TextView
        android:id="@+id/appointment"
        android:layout_width="373dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rounded_corner"
        android:text="Appointment:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appointment_box" />

    <TextView
        android:id="@+id/date"
        android:layout_width="373dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:text="Date:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appointment" />

    <TextView
        android:id="@+id/time"
        android:layout_width="373dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/rounded_corner"
        android:text="Time:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date" />

    <TextView
        android:id="@+id/car_plate_number"
        android:layout_width="373dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:text="Plate Number:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time" />

    <TextView
        android:id="@+id/reason"
        android:layout_width="373dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:text="Reason:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/car_plate_number" />

    <Button
        android:id="@+id/cancel_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:backgroundTint="@color/black"
        android:text="Cancel Appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appointment_box" />

</androidx.constraintlayout.widget.ConstraintLayout>